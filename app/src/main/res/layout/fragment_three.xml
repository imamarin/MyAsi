<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThirdFragment"
    android:orientation="vertical"
    android:background="?android:windowBackground">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:gravity="right"
        android:theme="@style/Theme.MyAsi.AppBarOverlay">
        <LinearLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="SOS Menyusui"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00018786"
                android:layout_weight="1"
                app:popupTheme="@style/Theme.MyAsi.PopupOverlay">

                <ImageButton
                    android:id="@+id/cariArtikel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="#00FFFFFF"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_baseline_search_24" />
            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="5dp"
            android:weightSum="3">
            <ImageButton
                android:id="@+id/backTitleBar"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:background="#00FFFFFF"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <androidx.appcompat.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:searchIcon="@null"
                app:iconifiedByDefault="false"
                app:queryHint="Cari Artikel"/>
        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>
    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="15dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgArtikel"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/bayiibu" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:alpha="0.5"
                            android:padding="10dp"
                            android:layout_alignBottom="@+id/imgArtikel"
                            android:height="60dp"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:text="Judul Artikel-1"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="Baca Selengkapnya"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="15dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgArtikel2"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:src="@drawable/cemas"
                            android:scaleType="fitXY"
                            android:foreground="@color/black"
                            android:alpha="0.5"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:alpha="0.5"
                            android:padding="10dp"
                            android:layout_alignBottom="@+id/imgArtikel2"
                            android:height="60dp"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:text="Judul Artikel-2"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="Baca Selengkapnya"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgArtikel3"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:src="@drawable/bayi"
                            android:scaleType="fitXY"
                            android:foreground="@color/black"
                            android:alpha="0.5"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            android:alpha="0.5"
                            android:padding="10dp"
                            android:layout_alignBottom="@+id/imgArtikel3"
                            android:height="60dp"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:text="Judul Artikel-3"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="Baca Selengkapnya"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>